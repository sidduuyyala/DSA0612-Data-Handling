library(plotly)

# Create the data frame
data <- data.frame(
  Student = c('A', 'B', 'C', 'D', 'E'),
  Math_Score = c(85, 72, 90, 78, 88),
  Science_Score = c(78, 85, 80, 75, 82),
  Attendance = c(95, 92, 98, 85, 93)
)

# Create a plotly 3D surface plot
plot_ly(data, x = ~Math_Score, y = ~Attendance, z = ~Science_Score, type = 'surface') %>%
  layout(title = '3D Surface Plot of Science Scores',
         scene = list(xaxis = list(title = 'Math Score'),
                      yaxis = list(title = 'Attendance (%)'),
                      zaxis = list(title = 'Science Score')))
