# Install and load the necessary library
install.packages("plotly")
library(plotly)

# Create the data frame
data <- data.frame(
  Date = as.Date(c("2023-01-01", "2023-01-02", "2023-01-03", "2023-01-04", "2023-01-05")),
  Stock_Price = c(100, 102, 98, 105, 108),
  Volume_Traded = c(2.5, 3.0, 2.2, 2.8, 3.5),
  Market_Cap = c(500, 510, 490, 525, 540)
)

# Create the 3D scatter plot
fig <- plot_ly(
  data,
  x = ~Volume_Traded,
  y = ~Market_Cap,
  z = ~Stock_Price,
  type = 'scatter3d',
  mode = 'markers',
  marker = list(size = 5)
)

# Add labels and title
fig <- fig %>%
  layout(
    scene = list(
      xaxis = list(title = 'Volume Traded (millions)'),
      yaxis = list(title = 'Market Cap ($)'),
      zaxis = list(title = 'Stock Price ($)')
    ),
    title = '3D Scatter Plot: Volume Traded vs. Market Cap vs. Stock Price'
  )

# Show the plot
fig
